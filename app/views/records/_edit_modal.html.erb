  <div class="modal-body">
    <% if @record.errors.messages[:title].blank? %>
      <div class="form-group">
    <% else %>
      <div class="form-group validate-has-error">
    <% end %>
        <%= f.label :title, class: "hidden control-label" %>
        <%= f.text_field :title, class: "form-control",placeholder: @record.title %>
        <% @record.errors.messages[:title].each do |message| %>
        <span for="link" class="validate-has-error"><%= message %></span>
        <% end %>Â 
      </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">CANCEL</button>
    <%= f.submit "OK", class: "btn btn-primary edit-submit" %>
  </div>
<% end %>
